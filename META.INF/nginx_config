#/etc/nginx/sites-available/default

server {
    listen 443 ssl;
    server_name snowpea.site;

    ssl_certificate /etc/letsencrypt/live/snowpea.site-0001/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/snowpea.site-0001/privkey.pem;

    location / {
        proxy_pass http://localhost:5173;  # Redirect to port 5173 where Vite is running
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}

server {
    listen 80;
    server_name snowpea.site;
    return 301 https://$server_name$request_uri;  # Redirect HTTP to HTTPS
}